@model IEnumerable<AgendaMedica.Models.Medico>

@{
	ViewData["Title"] = "Cadastro de Medicos";
}
<div clss="container text-light mt-5">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Médicos</span></h1>

	<p>
		<a asp-action="Create" class="nav-link text-ligth btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.CRM)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Especialidade)
				</th>
				<th class="bg-black"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CRM)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Especialidade.EspecialidadeId)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.MedicoId">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.MedicoId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.MedicoId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>