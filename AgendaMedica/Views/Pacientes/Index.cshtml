@model IEnumerable<AgendaMedica.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}
<div clss="container text-light mt-5">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Pacientes</span></h1>

	<p>
		<a asp-action="Create" class="nav-link text-ligth btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>

				<th class="bg-black">
					Prontuário
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.CPF)
				</th>
				<th clas="bg-black">
					Data de Nascimento
				</th>
				<th class="bg-black">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-black">
					Email
				</th>
				<th class="bg-black">
					Ações
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNasc)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a class="btn btn-outline-light btn-sm me-3" asp-action="Edit" asp-route-id="@item.PacienteId">Editar</a> |
						<a class="btn btn-outline-light btn-sm" asp-action="Delete" asp-route-id="@item.PacienteId">Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
