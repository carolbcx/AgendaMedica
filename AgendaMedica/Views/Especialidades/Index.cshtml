@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
	ViewData["Title"] = "Cadastro de Especialidades";
}

<div class="container text-light mt-5">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Especialidades</span></h1>

	<p>
		<a asp-action="Create" class="nav-link text-ligth btn btn-outline-light btn-lg w-25"> <i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.EspecialidadeId">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.EspecialidadeId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.EspecialidadeId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
